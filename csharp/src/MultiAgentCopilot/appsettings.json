{
  "Logging": {
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Trace",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CosmosDBSettings": {
    "CosmosUri": "https://cosmos-xxz2idhkxrjee.documents.azure.com:443/",
    "Database": "MultiAgentBanking",
    "ChatDataContainer": "ChatsData",
    "UserDataContainer": "Users",
    "AccountsContainer": "AccountsData",
    "OfferDataContainer": "OffersData",
    "RequestDataContainer": "AccountsData",
    "EnableTracing": true
  },
  "AgentFrameworkServiceSettings": {
    "AzureOpenAISettings": {
      "Endpoint": "https://sandeepnair-openai.openai.azure.com/",
      "EmbeddingsDeployment": "text-embedding-3-small",
      "CompletionsDeployment": "gpt-4o"
    },
    "EnableTracing": true
  },
  "ApplicationInsights": {
    "ConnectionString": "[connectionstring]"
  },

  // OAuth-based MCP configuration - All agents connect to single MCPServer instance
  "MCPSettings": {
    "ConnectionType": "HTTP",
    
    // All agent endpoints point to the same MCPServer instance
    "CordinatorEndpointUrl": "http://localhost:5000/mcp",
    "CustomerEndpointUrl": "http://localhost:5000/mcp", 
    "SalesEndpointUrl": "http://localhost:5000/mcp",
    "TransactionsEndpointUrl": "http://localhost:5000/mcp",

    // Agent tool filtering tags - each agent gets different banking tool access
    "CordinatorToolTags": "general,accounts,offers,transactions,services",
    "CustomerToolTags": "accounts,services,transactions",
    "SalesToolTags": "offers,accounts,services",
    "TransactionsToolTags": "accounts,transactions,services",

    // OAuth 2.0 Client Credentials per agent - all authenticate to same server
    "CordinatorClientId": "coordinator-agent-client",
    "CordinatorClientSecret": "coordinator-secret-key-2024",
    "CordinatorScope": "mcp:tools",

    "CustomerClientId": "customer-agent-client", 
    "CustomerClientSecret": "customer-secret-key-2024",
    "CustomerScope": "mcp:tools",

    "SalesClientId": "sales-agent-client",
    "SalesClientSecret": "sales-secret-key-2024", 
    "SalesScope": "mcp:tools",

    "TransactionsClientId": "transactions-agent-client",
    "TransactionsClientSecret": "transactions-secret-key-2024",
    "TransactionsScope": "mcp:tools"
  }
}